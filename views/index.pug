extends layout

block content
  div.container
    h1 Acme Products Containers

    ul.nav.nav-pills
      li.active
        a(href='/') Home
      each categoryName in categoryNames
        li
          a(href='categories/' + categoryName + '/products') #{categoryName}

    h2 Home
    form.well(method='POST' action='/categories')
      div.form-group
        input.form-control(name='name' placeholder='enter a CATEGORY name...')
      div.form-group
        button.btn.btn-primary Save
